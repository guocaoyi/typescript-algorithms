{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "lib": [
      "ES2020",
      "ES5",
      "ES6",
      "ESNext"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es2015"
  },
  "exclude": [
    "node_modules"
  ]
}